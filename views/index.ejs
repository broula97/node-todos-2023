<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>These are your todos!</h1>

    <ul>
      <% for (const todo of todos) { %>
        <li>
          <%= todo.title %>
          <a href="/toggle-todo/<%= todo.id %>">
            <%= todo.done ? 'Hotovo' : 'Nesplněno' %>
          </a>
          <a href="/remove-todo/<%= todo.id %>">
            Odebrat
          </a>
          <a href="/todo/<%= todo.id %>">Přejít na detail</a>
        </li>
      <% } %>
    </ul>

    <form method="post" action="/new-todo">
      <input type="text" name="title">
      <button type="submit">Přidat TODO</button>
    </form>
  </body>
</html>
